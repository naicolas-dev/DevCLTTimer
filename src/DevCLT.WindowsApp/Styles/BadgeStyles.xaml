<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ══ Badge.Neutral ══ -->
    <Style x:Key="BadgeNeutral" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource InfoBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource BadgeRadius}" />
        <Setter Property="Padding" Value="12,4" />
    </Style>

    <!-- ══ Badge.Working ══ -->
    <Style x:Key="BadgeWorking" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource BadgeWorkingBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource BadgeRadius}" />
        <Setter Property="Padding" Value="12,4" />
    </Style>

    <!-- ══ Badge.Overtime ══ -->
    <Style x:Key="BadgeOvertime" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource BadgeOvertimeBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource BadgeRadius}" />
        <Setter Property="Padding" Value="12,4" />
    </Style>

</ResourceDictionary>
