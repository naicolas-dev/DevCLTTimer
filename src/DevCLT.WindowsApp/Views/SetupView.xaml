<UserControl x:Class="DevCLT.WindowsApp.Views.SetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:DevCLT.WindowsApp.ViewModels"
             xmlns:conv="clr-namespace:DevCLT.WindowsApp.Converters">

    <UserControl.Resources>
        <conv:HotkeyToKbdConverter x:Key="HotkeyKbd" />
    </UserControl.Resources>

    <Grid Margin="{StaticResource WindowPadding}">

        <StackPanel VerticalAlignment="Center" MaxWidth="400" HorizontalAlignment="Center">

            <!-- Header -->
            <TextBlock Text="Dev CLT Timer"
                       Style="{StaticResource HeaderText}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8" />
            <TextBlock Text="Configure sua jornada de trabalho"
                       Style="{StaticResource HintText}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24" />

            <!-- Card -->
            <Border Style="{StaticResource Card}">
                <StackPanel>

                    <!-- Work Duration -->
                    <TextBlock Text="HORAS DE TRABALHO" Style="{StaticResource LabelText}" Margin="0,0,0,8" />
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Horas" Style="{StaticResource HintText}" Margin="0,0,0,4"/>
                            <TextBox Style="{StaticResource UnderlinedInput}"
                                     Text="{Binding WorkHours, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <TextBlock Text=":" Grid.Column="1"
                                   VerticalAlignment="Bottom" Margin="8,0,8,10"
                                   Style="{StaticResource BodyText}" />
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Minutos" Style="{StaticResource HintText}" Margin="0,0,0,4"/>
                            <TextBox Style="{StaticResource UnderlinedInput}"
                                     Text="{Binding WorkMinutes, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <!-- Break Duration -->
                    <TextBlock Text="HORAS DE PAUSA" Style="{StaticResource LabelText}" Margin="0,0,0,8" />
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Horas" Style="{StaticResource HintText}" Margin="0,0,0,4"/>
                            <TextBox Style="{StaticResource UnderlinedInput}"
                                     Text="{Binding BreakHours, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <TextBlock Text=":" Grid.Column="1"
                                   VerticalAlignment="Bottom" Margin="8,0,8,10"
                                   Style="{StaticResource BodyText}" />
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Minutos" Style="{StaticResource HintText}" Margin="0,0,0,4"/>
                            <TextBox Style="{StaticResource UnderlinedInput}"
                                     Text="{Binding BreakMinutes, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>

                    <!-- Overtime Notify -->
                    <TextBlock Text="NOTIFICAR HORA EXTRA A CADA" Style="{StaticResource LabelText}" Margin="0,0,0,8" />
                    <ComboBox Style="{StaticResource UnderlinedComboBox}"
                              ItemsSource="{Binding NotifyOptions}"
                              SelectedIndex="{Binding SelectedNotifyIndex}"
                              Margin="0,0,0,24" />

                    <!-- Separator -->
                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Margin="0,0,0,16" />

                    <!-- Start Button -->
                    <Button Style="{StaticResource PrimaryButton}"
                            Command="{Binding StartCommand}"
                            HorizontalAlignment="Stretch">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Iniciar jornada" VerticalAlignment="Center" />
                                <ContentControl Content="{Binding DataContext.SettingsVM.JornadaKey, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HotkeyKbd}}" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- History Link -->
                    <Button Style="{StaticResource TertiaryButton}"
                            Content="Ver histórico"
                            Command="{Binding DataContext.ShowHistoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            HorizontalAlignment="Center"
                            Margin="0,12,0,0" />

                    <!-- Settings Link -->
                    <Button Style="{StaticResource TertiaryButton}"
                            Command="{Binding DataContext.ShowSettingsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            HorizontalAlignment="Center"
                            Margin="0,4,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.04 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.04 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                                  Stroke="{DynamicResource TextSecondaryBrush}"
                                  Fill="{DynamicResource TextSecondaryBrush}"
                                  Width="14" Height="14" Stretch="Uniform"
                                  VerticalAlignment="Center" Margin="0,0,6,0" />
                            <TextBlock Text="Configurações" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
