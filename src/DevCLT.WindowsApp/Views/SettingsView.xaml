<UserControl x:Class="DevCLT.WindowsApp.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:DevCLT.WindowsApp.Converters"
             Focusable="True"
             PreviewKeyDown="OnPreviewKeyDown">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolVis" />
        <conv:HotkeyToKbdConverter x:Key="HotkeyKbd" />
    </UserControl.Resources>

    <Grid>
        <!-- Main Content -->
        <Grid Margin="{StaticResource WindowPadding}">
            <StackPanel VerticalAlignment="Top" MaxWidth="400" HorizontalAlignment="Center">

                <!-- Back Button -->
                <Button Style="{StaticResource TertiaryButton}"
                        Command="{Binding BackCommand}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M10,2 L4,8 L10,14"
                              Stroke="{DynamicResource TextSecondaryBrush}"
                              StrokeThickness="1.5" Width="12" Height="16"
                              Stretch="Uniform" VerticalAlignment="Center"
                              Margin="0,0,6,0" />
                        <TextBlock Text="Voltar" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!-- Header -->
                <TextBlock Text="Configurações"
                           Style="{StaticResource HeaderText}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8" />
                <TextBlock Text="Atalhos globais do teclado"
                           Style="{StaticResource HintText}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24" />

                <!-- Card -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>

                        <!-- Enable/Disable Toggle -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="HOTKEYS ATIVADAS"
                                           Style="{StaticResource LabelText}" />
                                <TextBlock Text="Atalhos funcionam mesmo com o app minimizado"
                                           Style="{StaticResource HintText}"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                            <CheckBox Grid.Column="1"
                                      IsChecked="{Binding HotkeysEnabled}"
                                      VerticalAlignment="Center"
                                      Margin="16,0,0,0" />
                        </Grid>

                        <!-- Separator -->
                        <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Margin="0,0,0,16" />

                        <!-- Jornada Hotkey -->
                        <TextBlock Text="INICIAR / ENCERRAR JORNADA"
                                   Style="{StaticResource LabelText}"
                                   Margin="0,0,0,8" />
                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding RecordJornadaCommand}"
                                IsEnabled="{Binding HotkeysEnabled}"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,16">
                            <Button.Content>
                                <Grid HorizontalAlignment="Stretch">
                                    <ContentControl Content="{Binding JornadaKey, Converter={StaticResource HotkeyKbd}}"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                                    Visibility="{Binding IsRecordingJornada, Converter={StaticResource BoolVis}, ConverterParameter=Invert}" />
                                    <TextBlock Text="Pressione uma combinação de teclas..."
                                               Style="{StaticResource HintText}"
                                               Foreground="{DynamicResource PrimaryBrush}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding IsRecordingJornada, Converter={StaticResource BoolVis}}" />
                                </Grid>
                            </Button.Content>
                        </Button>

                        <!-- Pausa Hotkey -->
                        <TextBlock Text="INICIAR / ENCERRAR PAUSA"
                                   Style="{StaticResource LabelText}"
                                   Margin="0,0,0,8" />
                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding RecordPausaCommand}"
                                IsEnabled="{Binding HotkeysEnabled}"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,16">
                            <Button.Content>
                                <Grid HorizontalAlignment="Stretch">
                                    <ContentControl Content="{Binding PausaKey, Converter={StaticResource HotkeyKbd}}"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                                    Visibility="{Binding IsRecordingPausa, Converter={StaticResource BoolVis}, ConverterParameter=Invert}" />
                                    <TextBlock Text="Pressione uma combinação de teclas..."
                                               Style="{StaticResource HintText}"
                                               Foreground="{DynamicResource PrimaryBrush}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding IsRecordingPausa, Converter={StaticResource BoolVis}}" />
                                </Grid>
                            </Button.Content>
                        </Button>

                        <!-- Overtime Hotkey -->
                        <TextBlock Text="INICIAR / ENCERRAR HORA EXTRA"
                                   Style="{StaticResource LabelText}"
                                   Margin="0,0,0,8" />
                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding RecordOvertimeCommand}"
                                IsEnabled="{Binding HotkeysEnabled}"
                                HorizontalAlignment="Stretch">
                            <Button.Content>
                                <Grid HorizontalAlignment="Stretch">
                                    <ContentControl Content="{Binding OvertimeKey, Converter={StaticResource HotkeyKbd}}"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                                    Visibility="{Binding IsRecordingOvertime, Converter={StaticResource BoolVis}, ConverterParameter=Invert}" />
                                    <TextBlock Text="Pressione uma combinação de teclas..."
                                               Style="{StaticResource HintText}"
                                               Foreground="{DynamicResource PrimaryBrush}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding IsRecordingOvertime, Converter={StaticResource BoolVis}}" />
                                </Grid>
                            </Button.Content>
                        </Button>

                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Style="{StaticResource PrimaryButton}"
                            Command="{Binding SaveCommand}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M17,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3M19,19H5V5H16.17L19,7.83V19M12,12A3,3 0 0,0 9,15A3,3 0 0,0 12,18A3,3 0 0,0 15,15A3,3 0 0,0 12,12M6,6H15V10H6V6Z"
                                  Fill="{DynamicResource SurfaceBrush}"
                                  Width="14" Height="14" Stretch="Uniform"
                                  VerticalAlignment="Center" Margin="0,0,6,0" />
                            <TextBlock Text="Salvar" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TertiaryButton}"
                            Command="{Binding RestoreDefaultsCommand}"
                            Content="Restaurar padrões" />
                </StackPanel>

                <!-- Unsaved indicator -->
                <TextBlock Style="{StaticResource HintText}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,12,0,0"
                           Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolVis}}">
                    <Run Text="⚠ Você tem alterações não salvas." Foreground="{DynamicResource WarningBrush}" />
                </TextBlock>

                <!-- Hint -->
                <TextBlock Style="{StaticResource HintText}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,8,0,0">
                    <Run Text="Clique em um atalho e pressione a nova combinação." />
                </TextBlock>

            </StackPanel>
        </Grid>

        <!-- Unsaved Changes Modal -->
        <Border Visibility="{Binding ShowUnsavedModal, Converter={StaticResource BoolVis}}"
                Style="{StaticResource ModalOverlay}">
            <Border Style="{StaticResource ModalCard}">
                <StackPanel>
                    <TextBlock Text="Alterações não salvas"
                               Style="{StaticResource HeaderText}"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8" />
                    <TextBlock Text="Você tem configurações de hotkey que ainda não foram salvas."
                               Style="{StaticResource HintText}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,20" />

                    <StackPanel HorizontalAlignment="Center">
                        <Button Style="{StaticResource PrimaryButton}"
                                Command="{Binding UnsavedSaveCommand}"
                                Content="Salvar e sair"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,8" />
                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding UnsavedDiscardCommand}"
                                Content="Sair sem salvar"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,8" />
                        <Button Style="{StaticResource TertiaryButton}"
                                Command="{Binding UnsavedContinueCommand}"
                                Content="Continuar editando"
                                HorizontalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
