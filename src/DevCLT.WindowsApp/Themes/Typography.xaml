<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ══ Font Families ══ -->
    <!-- Satoshi is not a system font; fall back to Segoe UI for UI text -->
    <FontFamily x:Key="SansFont">Segoe UI, Satoshi</FontFamily>
    <FontFamily x:Key="MonoFont">JetBrains Mono, Consolas, Courier New</FontFamily>

    <!-- ══ Font Sizes ══ -->
    <sys:Double x:Key="TimerDisplaySize" xmlns:sys="clr-namespace:System;assembly=mscorlib">64</sys:Double>
    <sys:Double x:Key="HeaderSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">20</sys:Double>
    <sys:Double x:Key="BodySize" xmlns:sys="clr-namespace:System;assembly=mscorlib">14</sys:Double>
    <sys:Double x:Key="LabelSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">13</sys:Double>
    <sys:Double x:Key="HintSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>

    <!-- ══ Font Weights ══ -->
    <FontWeight x:Key="WeightMedium">Medium</FontWeight>
    <FontWeight x:Key="WeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="WeightRegular">Normal</FontWeight>

    <!-- ══ Predefined TextBlock Styles ══ -->
    <Style x:Key="TimerDisplayText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MonoFont}" />
        <Setter Property="FontSize" Value="{StaticResource TimerDisplaySize}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightMedium}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <Style x:Key="HeaderText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource SansFont}" />
        <Setter Property="FontSize" Value="{StaticResource HeaderSize}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightSemiBold}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <Style x:Key="BodyText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource SansFont}" />
        <Setter Property="FontSize" Value="{StaticResource BodySize}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightRegular}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <Style x:Key="LabelText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource SansFont}" />
        <Setter Property="FontSize" Value="{StaticResource LabelSize}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightMedium}" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    </Style>

    <Style x:Key="HintText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource SansFont}" />
        <Setter Property="FontSize" Value="{StaticResource HintSize}" />
        <Setter Property="FontWeight" Value="{StaticResource WeightRegular}" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    </Style>

</ResourceDictionary>
