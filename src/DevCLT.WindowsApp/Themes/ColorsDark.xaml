<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ══ Dark Theme: Floresta Noturna ══ -->

    <!-- Backgrounds -->
    <Color x:Key="BackgroundColor">#181A18</Color>
    <Color x:Key="SurfaceColor">#222522</Color>
    <Color x:Key="BreakBackgroundTintColor">#1C1E1C</Color> <!-- Slightly lighter/tinted black -->

    <!-- Text -->
    <Color x:Key="TextPrimaryColor">#E6E4DF</Color>
    <Color x:Key="TextSecondaryColor">#939692</Color>

    <!-- Border -->
    <Color x:Key="BorderColor">#383D38</Color>

    <!-- Primary (Forest Green) -->
    <Color x:Key="PrimaryColor">#7AA38E</Color>
    <Color x:Key="PrimaryHoverColor">#8BB8A2</Color>

    <!-- Semantic -->
    <Color x:Key="SuccessColor">#7AA38E</Color> <!-- Using Primary for success in dark -->
    <Color x:Key="WarningColor">#D98A44</Color>
    <Color x:Key="DangerColor">#C27365</Color>
    <Color x:Key="InfoColor">#383D38</Color>

    <!-- Disabled -->
    <Color x:Key="DisabledBackgroundColor">#2C2F2C</Color>
    <Color x:Key="DisabledTextColor">#5C5F5C</Color>

    <!-- Focus -->
    <Color x:Key="FocusRingColor">#7AA38E</Color>

    <!-- Row Hover -->
    <Color x:Key="RowHoverColor">#222522</Color>

    <!-- ══ SolidColorBrushes ══ -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="BreakBackgroundTintBrush" Color="{StaticResource BreakBackgroundTintColor}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="{StaticResource DisabledBackgroundColor}" />
    <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource DisabledTextColor}" />
    <SolidColorBrush x:Key="FocusRingBrush" Color="{StaticResource FocusRingColor}" />
    <SolidColorBrush x:Key="RowHoverBrush" Color="{StaticResource RowHoverColor}" />

    <!-- Surface Hover: Primary @ 12% (Dark rule) -->
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource PrimaryColor}" Opacity="0.12" />
    <!-- Surface Selected: Primary @ 20% (Dark rule) -->
    <SolidColorBrush x:Key="SurfaceSelectedBrush" Color="{StaticResource PrimaryColor}" Opacity="0.20" />

    <!-- Badge backgrounds -->
    <!-- Dark badges usually need higher opacity to be visible or same logic -->
    <SolidColorBrush x:Key="BadgeWorkingBrush" Color="{StaticResource PrimaryColor}" Opacity="0.20" />
    <SolidColorBrush x:Key="BadgeOvertimeBrush" Color="{StaticResource WarningColor}" Opacity="0.20" />

</ResourceDictionary>
