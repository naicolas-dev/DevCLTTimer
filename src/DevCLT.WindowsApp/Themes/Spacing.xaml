<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ══ Spacing Tokens ══ -->
    <Thickness x:Key="WindowPadding">24</Thickness>
    <Thickness x:Key="CardPadding">20</Thickness>
    <Thickness x:Key="CardPaddingLarge">24</Thickness>
    <sys:Double x:Key="BlockGap">16</sys:Double>
    <sys:Double x:Key="SmallGap">8</sys:Double>
    <sys:Double x:Key="TinyGap">4</sys:Double>

    <!-- ══ Corner Radius ══ -->
    <CornerRadius x:Key="CardRadius">12</CornerRadius>
    <CornerRadius x:Key="ButtonRadius">8</CornerRadius>
    <CornerRadius x:Key="SecondaryButtonRadius">4</CornerRadius>
    <CornerRadius x:Key="InputRadius">4</CornerRadius>
    <CornerRadius x:Key="BadgeRadius">999</CornerRadius>

</ResourceDictionary>
